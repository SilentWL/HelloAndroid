<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <ImageView
        android:id="@+id/SearchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/searchlist"
        android:scaleType="fitCenter"
        android:background="#ffffffff"
        android:alpha="255"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light" />
    <ImageView
        android:id="@+id/Refreshing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/refreshing"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:alpha="255" />
    <ListView
        android:id="@+id/AvaliableDeviceList"
        android:layout_width="510dp"
        android:layout_height="280dp"
        android:alpha="255"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginStart="35dp"></ListView>
</RelativeLayout>